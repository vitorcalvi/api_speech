run = ["python", "main.py"]
modules = ["python-3.10"]

[env]
PYTHONPATH = "${REPL_HOME}/.pythonlibs/lib/python3.10/site-packages"
HF_HOME = "/tmp/huggingface_cache"
TRANSFORMERS_CACHE = "/tmp/huggingface_cache"

[nix]
channel = "stable-23_05"

[deployment]
run = ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "80"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8000
externalPort = 80

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]
